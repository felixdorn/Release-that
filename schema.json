{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Release that config",
  "type": "object",
  "properties": {
    "origin": {
      "type": "string"
    },
    
    "release_notes": {
      "type": "object",
      "properties": {
        "commit_format": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "ignore": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "before_release": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "after_release": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "assets": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tag_message": {
      "type": "string"
    }
  },
  "additionalProperties": false
}